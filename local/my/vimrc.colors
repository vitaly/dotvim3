fu! ResetThemeFix()
    let s:onFix=''
endfu

fu! Theme(bg, name)
  let fname='s:' . substitute(a:name, '-', '_', 'g')
  if exists("*" . fname)
    let s:onFix='call ' . fname . '()'
  else
    let s:onFix=''
  endif
  let bg = "set background=" . a:bg
  exe bg
  exe 'colorscheme ' . a:name
endfu



